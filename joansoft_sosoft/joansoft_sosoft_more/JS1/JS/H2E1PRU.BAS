PRINT "LA SUMA ES: "; S
GOTO MENU
RESTA:
CLS
INPUT "ENTRA UN NUMERO"; A
INPUT "ENTRA OTRO NUMERO"; B
R = A - B
PRINT "LA RESTA ES: "; R
GOTO MENU
FIN:
END

